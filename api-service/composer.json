{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "repositories": {
        "yj-hyperf-admin-pligin": {
            "type": "path",
            "url": "../plugin/*"
        }
    },
    "require": {
        "php": ">=8.0",
        "gregwar/captcha": "^1.1",
        "hyperf/cache": "~3.0.0",
        "hyperf/command": "~3.0.0",
        "hyperf/config": "~3.0.0",
        "hyperf/database": "~3.0.0",
        "hyperf/db-connection": "~3.0.0",
        "hyperf/filesystem": "^3.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/guzzle": "~3.0.0",
        "hyperf/http-server": "~3.0.0",
        "hyperf/logger": "~3.0.0",
        "hyperf/memory": "~3.0.0",
        "hyperf/process": "~3.0.0",
        "hyperf/redis": "~3.0.0",
        "hyperf/session": "^3.0",
        "hyperf/snowflake": "^3.0",
        "hyperf/task": "^3.0",
        "hyperf/validation": "^3.0",
        "hyperf/view": "^3.0",
        "hyperf/view-engine": "^3.0",
        "hyperf/websocket-server": "^3.0",
        "w7corp/easywechat": "^6.10",
        "yj-hyperf-admin-pligin/apidog": "dev-main",
        "yj-hyperf-admin-pligin/email": "dev-main",
        "yj-hyperf-admin-pligin/generator": "dev-main"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "~3.0.0",
        "hyperf/testing": "~3.0.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "^5.0",
        "symfony/var-dumper": "^6.2"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Function/Common.php",
            "app/Modules/Web/Helper/Common.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php ./bin/hyperf.php start"
        ]
    }
}
